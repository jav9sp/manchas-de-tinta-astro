---
interface Props {
  titulo: string,
  descripcion: string,
  enlace: string,
  imagen: string,
}

const {titulo, descripcion, enlace, imagen} = Astro.props;
---

<div class="w-[300px] h-[260px] shadow-md relative">
  <img class=" absolute top-0 left-0 z-0" src={imagen} alt="">
  <div class="flex flex-col gap-1 px-4 py-2 bg-emerald-50 text-emerald-800 z-10 absolute bottom-0 left-0 w-full">
    <h3 class=" text-lg font-bold">{titulo}</h3>
    <p class="text-sm">{descripcion}</p>
    <a class=" text-center mt-4 hover:font-semibold" href={enlace}>Leer m√°s...</a>
  </div>
</div>